{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@Modules/*": ["./Modules/*"],
      "@AdminModule/*": ["./Modules/Admin/resources/assets/js/*"]
    }
  },
  "include": [
    "Modules/**/Resources/assets/js/**/*.ts",
    "Modules/**/Resources/assets/js/**/*.d.ts",
    "Modules/**/Resources/assets/js/**/*.vue",
    "./resources/js/**/*.ts",
    "./resources/js/**/*.d.ts",
    "./resources/js/**/*.vue",
    "./resources/js/**/*.js"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}