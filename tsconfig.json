{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@Modules/*": ["./Modules/*"],
      "@AdminModule/*": ["Modules/Admin/resources/assets/js/*"],
    },
    "rootDir": "./",
    "include": [
      "./Modules/**/Resources/assets/js/**/*.ts",
      "./Modules/**/Resources/assets/js/**/*.d.ts",
      "./Modules/**/Resources/assets/js/**/*.vue",
      "./resources/js/**/*.ts",
      "./resources/js/**/*.d.ts",
      "./resources/js/**/*.vue"
    ]
  }
}